{
	"compilerOptions": {
		// General
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"target": "ESNext",

		// Modules
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"baseUrl": "./src",
		"ignoreDeprecations": "6.0",
		// Type Checking & Safety
		"strict": true,
		"skipLibCheck": true,
		"types": ["vite/client", "node"]
	}
}
